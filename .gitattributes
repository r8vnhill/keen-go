# Linux start script should use LF
/gradlew        text eol=lf

# Windows batch scripts use CRLF
*.bat           text eol=crlf

# Binary files should be left untouched
*.jar           binary
*.png           binary
*.jpg           binary
*.jpeg          binary
*.gif           binary
*.ico           binary
*.pdf           binary
*.zip           binary

# Source and config files should use LF
*.kt            text eol=lf
*.kts           text eol=lf
*.java          text eol=lf
*.properties    text eol=lf
*.toml          text eol=lf
*.md            text eol=lf
*.yml           text eol=lf
*.yaml          text eol=lf
*.json          text eol=lf
*.xml           text eol=lf
*.gitignore     text eol=lf
*.gitattributes text eol=lf
